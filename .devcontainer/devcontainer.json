{
  "name": "GitHub Readme Stats App",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-20-bullseye",
  "features": {},
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Vercel Dev Server",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "npm install && npm install -g vercel@latest",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },
  "remoteEnv": {
    "PAT_1": "${localEnv:PAT_1}"
  }
}

